<Window x:Class="WpfApp9.Windows.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9.Windows"
        mc:Ignorable="d"
        Title="Продукт" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock x:Name="tZag" Text="Добавление продукта" FontSize="24" />
            <TextBlock Text="Название" FontSize="22" Margin="0 5 0 0"/>
            <TextBox x:Name="tName"/>
            <TextBlock Text="Стоимость" FontSize="22"/>
            <TextBox x:Name="tPrice"/>
            <Button Content="Добавить" Click="Button_Click_1"/>
            <Button Content="Отмена" Margin="0 5 0 0"/>
        </StackPanel>
    </Grid>
</Window>
